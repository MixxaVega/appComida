<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="112dp"
        android:layout_marginLeft="117dp"
        android:layout_marginRight="112dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="388dp"
        android:layout_height="222dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="132dp"
                android:layout_marginLeft="131dp"
                android:layout_marginRight="132dp"
                android:layout_marginStart="131dp"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:text="Iniciar sesi칩n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtContra" />

            <EditText
                android:id="@+id/txtContra"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="83dp"
                android:layout_marginLeft="86dp"
                android:layout_marginRight="83dp"
                android:layout_marginStart="86dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

            <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="83dp"
                android:layout_marginLeft="86dp"
                android:layout_marginRight="83dp"
                android:layout_marginStart="86dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Correo electr칩nico"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@+id/txtContra"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/forgPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="232dp"
                android:layout_marginStart="232dp"
                android:layout_marginTop="8dp"
                android:text="Olvidaste tu contrase침a?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" />

            <ImageView
                android:id="@+id/muestraContraLI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="67dp"
                app:layout_constraintStart_toEndOf="@+id/txtContra"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/atras_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_48dp" />

    <Button
        android:id="@+id/iniciaMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="80dp"
        android:onClick="onClick"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>