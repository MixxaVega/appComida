<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registroLocales"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txtLocal"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginEnd="96dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="96dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text=" Regístrate y dáte a conocer ante muchas personas."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="127dp"
        android:layout_marginLeft="124dp"
        android:layout_marginRight="127dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="10dp"
        android:text="¿Deseas darte a conocer?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="409dp"
        android:layout_height="34dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hechoLO"
                android:layout_width="50dp"
                android:layout_height="19dp"
                android:layout_marginLeft="300dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="8dp"
                android:text="Hecho"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/atrasLO"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/atrasLO"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toStartOf="@+id/hechoLO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_black_48dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/muestra_passLO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="222dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="111dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLocal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="299dp"
            android:foregroundGravity="center">

            <EditText
                android:id="@+id/nomLO"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Nombre del Establecimiento"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/direccion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailLo"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="Dirección Email"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@+id/passLo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/direccion" />

            <EditText
                android:id="@+id/rePassLo"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Repetir Contraseña"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passLo"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/passLo"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                app:layout_constraintBottom_toTopOf="@+id/rePassLo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailLo" />

            <EditText
                android:id="@+id/direccion"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:hint="Dirección del establecimiento"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/emailLo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.724"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomLO" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="304dp"
            android:layout_height="101dp">

            <ImageView
                android:id="@+id/addImgLO1"
                android:layout_width="81dp"
                android:layout_height="69dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/addImgLO"
                app:layout_constraintStart_toEndOf="@+id/addImgLO2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_box_black_48dp" />

            <ImageView
                android:id="@+id/addImgLO2"
                android:layout_width="81dp"
                android:layout_height="69dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/addImgLO1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_box_black_48dp" />

            <ImageView
                android:id="@+id/addImgLO"
                android:layout_width="81dp"
                android:layout_height="69dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/addImgLO1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_box_black_48dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>